<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:oxy="https://oxyplot.org/avalonia"
        xmlns:ui="clr-namespace:Lab3"
        xmlns:avalonia="http://oxyplot.org/avalonia"
        xmlns:lab3="clr-namespace:Lab3"
        xmlns:global="clr-namespace:"
        mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="800"
        x:Class="Lab3.MainWindow"
        Title="Lab Graphs"
        x:DataType="ui:MainWindow">

    <TabControl ItemsSource="{Binding }">
        <TabControl.ItemTemplate>
            <DataTemplate DataType="lab3:TabItemModel">
                <TextBlock Text="{Binding Header}" />
            </DataTemplate>
        </TabControl.ItemTemplate>

        <TabControl.ContentTemplate>
            <DataTemplate DataType="ui:TabItemModel">
                <avalonia:PlotView Model="{Binding Model}" Controller="{Binding Controller}" />
            </DataTemplate>
        </TabControl.ContentTemplate>
    </TabControl>
</Window>